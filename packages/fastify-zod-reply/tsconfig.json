{
    "compilerOptions": {
        "moduleResolution": "node",
        "declaration": true,
        "target": "es2017",
        "module": "commonjs",
        "outDir": "lib",
        "pretty": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "esModuleInterop": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "lib": [
            "ES2022"
        ],
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*.ts",
        "./__tests__/**/*.ts",
    ]
}